<Window x:Class="CheckConnectionWpf.Views.ChangeConnectionForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CheckConnectionWpf.Views"
        xmlns:IPmaskedtextbox="clr-namespace:IPmaskedtextbox;assembly=IPMaskedTextBox" 
        mc:Ignorable="d"
        Title="Изменение параметров подключения" Height="325" Width="588">
    <Window.Resources>
        <local:DebugDummyConverter x:Key="DebugDummyConverter" />
    </Window.Resources>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="0.2*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.3*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <GroupBox x:Name="groupBox" Header="Тип IP-адреса" Grid.RowSpan="1">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <RadioButton GroupName="ip_types" Content="DHCP" IsChecked="{Binding DHCP_Enabled, Mode=TwoWay}" HorizontalAlignment="Left" VerticalAlignment="Center" />
                <RadioButton GroupName="ip_types" Content="Static IP" HorizontalAlignment="Left" VerticalAlignment="Center" />
            </StackPanel>
        </GroupBox>
        <GroupBox x:Name="groupBoxIPAddress" Header="Параметры подключения" Grid.Column="1" Grid.ColumnSpan="1" Grid.RowSpan="1">
            <StackPanel>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Orientation="Vertical" Grid.Column="0" Grid.Row="0">
                        <Label x:Name="labelIPAddress" Content="IP-адрес"/>
                        <IPmaskedtextbox:IPMaskedTextBox x:Name="ipAddressControl"  HorizontalAlignment="Left" Height="23" Value="{Binding connection.IpAddress, Converter={StaticResource DebugDummyConverter}}" VerticalAlignment="Top" Width="120"/>
                    </StackPanel>
                    
                    <!--<StackPanel Orientation="Vertical" Grid.Column="1" Grid.Row="0">
                        <Label x:Name="labelNetMask" Content="Маска подсети"/>
                        <IPmaskedtextbox:IPMaskedTextBox  x:Name="NetMaskControl" HorizontalAlignment="Left" Height="23" Value="{Binding IPSubnetMask, Converter={StaticResource DebugDummyConverter}}" VerticalAlignment="Top" Width="120"/>
                    </StackPanel>
                    <StackPanel Orientation="Vertical" Grid.Column="2" Grid.Row="0">
                        <Label x:Name="labelDHCPServer" Content="DHCP сервер"/>
                        <IPmaskedtextbox:IPMaskedTextBox x:Name="DHCPServerControl" HorizontalAlignment="Left" Height="23" Value="{Binding DHCPServer, Converter={StaticResource DebugDummyConverter}}" VerticalAlignment="Top" Width="120"/>
                    </StackPanel>
                    <StackPanel Orientation="Vertical" Grid.Column="0" Grid.Row="1">
                        <Label x:Name="labelGateway" Content="Шлюз"/>
                        <IPmaskedtextbox:IPMaskedTextBox x:Name="GatewayControl1" HorizontalAlignment="Left" Height="23" Value="{Binding firstGateway, Converter={StaticResource DebugDummyConverter}}" VerticalAlignment="Top" Width="120"/>
                        <Separator Opacity="0" Height="10"/>
                        <IPmaskedtextbox:IPMaskedTextBox x:Name="GatewayControl2" HorizontalAlignment="Left" Height="23" Value="{Binding secondGateway, Converter={StaticResource DebugDummyConverter}}" VerticalAlignment="Top" Width="120"/>
                    </StackPanel>
                    <StackPanel Orientation="Vertical" Grid.Column="1" Grid.Row="1">
                        <Label x:Name="labelDNS" Content="DNS"/>
                        <IPmaskedtextbox:IPMaskedTextBox x:Name="DNSControl1" HorizontalAlignment="Left" Height="23" Value="{Binding firstDNSServer, Converter={StaticResource DebugDummyConverter}}" VerticalAlignment="Top" Width="120"/>
                        <Separator Opacity="0" Height="10"/>
                        <IPmaskedtextbox:IPMaskedTextBox x:Name="DNSControl2" HorizontalAlignment="Left" Height="23" Value="{Binding secondDNSServer, Converter={StaticResource DebugDummyConverter}}" VerticalAlignment="Top" Width="120"/>
                    </StackPanel>
                    <StackPanel Orientation="Vertical" Grid.Column="2" Grid.Row="1">
                        <Label x:Name="labelDNSDomain" Content="DNSDomain"/>
                        <TextBox x:Name="textBoxDNSDomain" HorizontalAlignment="Left" Height="23" Text="{Binding DNSDomain, Converter={StaticResource DebugDummyConverter}}" VerticalAlignment="Top" Width="120"/>
                    </StackPanel>-->
                </Grid>
            </StackPanel>
           
        </GroupBox>
        <Button x:Name="buttonSave" Content="Сохранить" Grid.Column="0" Grid.Row="1" Width="75" Height="23" HorizontalAlignment="Center" VerticalAlignment="Center" Click="buttonSave_Click"></Button>
        <Button x:Name="buttonCancel" Content="Закрыть"  Grid.Column="1" Grid.Row="1"  Width="75" Height="23" HorizontalAlignment="Center" VerticalAlignment="Center" Click="buttonCancel_Click"></Button>
    </Grid>
</Window>
